<%- include('header') -%>


<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col mt-3 col-xl-6 col-sm-8 ">
      <div class="box mb-3 mt-4"><h1 class="mb-2"> <%= dateKey %></h1></div>

      <!-- checkbox -->
      <div class="container text-center">
        <div class="row justify-content-center">
          <div class="col-8">
            <!-- item lists -->
            <ul>
              <div class="">
                <% for(let i=0; i<newListKey.length; i++ ) { %>
                  <div class="input-group">
                    <input class="form-check-input mt-0" type="checkbox">
                      <li class="form-control mb-2"><%= newListKey[i] %></li>
                  </div>
                <% } %>
                    
              </div>
            </ul>
      
            
          </div>
        </div>

      </div>


      <!-- container for form control -->
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-10">
            <!-- form control -->
            <form action="/" method="post">
              <div class="input-group">
                <input type="text" name="newListItem" class="form-control" placeholder="New To-Do">
                <button type="submit" class="btn btn-outline-secondary">+</button>
              </div>

            </form>

          </div>
        </div>
      </div>

      

    </div>



  </div>
</div>



